<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @restaurant.name %></h5>
    <p class="card-text"><%= @restaurant.category %></p>
    <p class="card-text"><%= @restaurant.address %></p>
    <p class="card-text"><%= @restaurant.phone_number %></p>
  </div>
</div>

<%= link_to "leave a review", new_restaurant_review_path(@restaurant) %>

<%= link_to "back to restaurants", restaurants_path %>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %><%= review.rating %></li>
  <% end %>
</ul>
<br>
