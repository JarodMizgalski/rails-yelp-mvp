<% @restaurants.each do |restaurant| %>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="card-body">
          <h5 class="card-title"><%= restaurant.name %></h5>
          <p class="card-text"><%= restaurant.category %></p>
          <p class="card-text"><%= restaurant.address %></p>
          <p class="card-text"><%= restaurant.phone_number %></p>
          <p><%= link_to "Visit page", restaurant_path(restaurant), class: "btn btn-primary" %></p>
        </div>
      </div>
  </div>
<% end %>

<%= link_to "Add new restaurant", new_restaurant_path , class: "btn btn-primary" %>
